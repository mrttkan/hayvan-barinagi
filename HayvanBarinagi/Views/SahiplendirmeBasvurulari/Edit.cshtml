@model HayvanBarinagi.Models.SahiplendirmeBasvurulari

<h2>Sahiplendirme Başvurusunu Düzenle</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Başvuran Kişi</label>
        <input asp-for="BasvuranKisi" class="form-control" />
    </div>
    <div class="form-group">
        <label>Durum</label>
        <input asp-for="Durum" class="form-control" />
    </div>
    <div class="form-group">
        <label>Hayvan ID</label>
        <input asp-for="HayvanId" class="form-control" />
    </div>
    <input type="submit" value="Düzenlemeyi Kaydet" class="btn btn-primary" />
</form>

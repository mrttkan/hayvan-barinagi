<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - HayvanBarınagı</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Özel Stiller -->
    <style>
        .navbar {
            margin-bottom: 50px;
        }

        .hero {
            background-color: #0275d8;
            color: white;
            padding: 100px 0;
            text-align: center;
        }

        .footer {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>

<body>

    <!-- Navigasyon Barı -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Ana Sayfa</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown">
                            Dil Seçiniz
                        </a>
                        <div class="dropdown-menu" aria-labelledby="languageDropdown">
                            <a class="dropdown-item" href="/DilDegistir?dil=tr">Türkçe</a>
                            <a class="dropdown-item" href="/DilDegistir?dil=en">İngilizce</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown">
                            Giriş/Kayıt Ol
                        </a>
                        <div class="dropdown-menu" aria-labelledby="accountDropdown">
                            <a class="dropdown-item" href="@Url.Action("Login", "Account")">Giriş</a>
                            <a class="dropdown-item" href="@Url.Action("Register", "Account")">Kayıt Ol</a>
                        </div>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Bölümü -->
    <div class="hero">
        <div class="container">
            <h1 class="display-4">Hayvan Barınağı</h1>
            <p class="lead">Bir hayatı değiştirin, yeni bir arkadaş edinin!</p>
            <a href="/Hayvanlar" class="btn btn-outline-light btn-lg">Hayvanlara Göz At</a>
        </div>
    </div>

    <!-- İçerik -->
    <div class="container my-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p>&copy; SAÜ 2023 Yaz Okulu Web Programlama HayvanBarınagı s221210017 Mert Kan.</p>
        </div>
    </footer>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
